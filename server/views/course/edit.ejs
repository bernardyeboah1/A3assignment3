<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1><%= title %></h1>


                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the course name"
                    name="name" 
                    value="<%= Course.name %>"
                    required>
                </div>


                <div class="form-group">
                    <label for="profTextField">Professor</label>
                    <input type="text" class="form-control"
                    id="profTextField"
                    placeholder="Enter the professor's name"
                    name="prof" 
                    value="<%= Course.prof %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="startTextField">Start</label>
                    <input type="text" class="form-control"
                    id="startTextField"
                    placeholder="Enter the start date"
                    name="start" 
                    value="<%= Course.start %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="priceTextField">End</label>
                    <input type="text" class="form-control"
                    id="endTextField"
                    placeholder="Enter the end date"
                    name="end" 
                    value="<%= Course.end %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="gradeTextField">Grade</label>
                    <input type="text" class="form-control"
                    id="gradeTextField"
                    placeholder="Enter your grade"
                    name="grade" 
                    value="<%= Course.grade %>"
                    required>
                </div>

                 <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/courselist" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>



              

    

<%- include ../partials/bottom_nav.ejs %>
<%- include ../partials/footer.ejs %>